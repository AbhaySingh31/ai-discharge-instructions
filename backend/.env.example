# Database Configuration
DATABASE_URL=sqlite:///./discharge_instructions.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/discharge_instructions

# OpenRouter Configuration (replaces OpenAI)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# CORS Settings (for development)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://127.0.0.1:3000"]

# HIPAA Compliance Settings
ENABLE_AUDIT_LOGGING=True
DATA_RETENTION_DAYS=2555
ENABLE_ENCRYPTION=True
